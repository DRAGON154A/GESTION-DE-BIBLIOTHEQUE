<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="application.controller.MainViewController"
           fx:id="rootPane"
           stylesheets="@/application/application.css">

    <!-- Contenu principal centré -->
    <VBox spacing="20"
          alignment="CENTER"
          maxWidth="500"
          style="-fx-padding: 40;">
        
        <!-- Logo -->
        <ImageView fitHeight="100"
                   fitWidth="100"
                   preserveRatio="true">
            <image>
                <Image url="@/application/ressources/image/logo.jpg"/>
            </image>
        </ImageView>

        <!-- Message d'accueil -->
        <Label text="Bienvenue dans le gestionnaire de bibliothèque de l'IAI"
               wrapText="true"
               textAlignment="CENTER"
               styleClass="label" />

        <!-- Boutons -->
        <Button text="Se connecter"
                onAction="#handleLoginButton"
                styleClass="button" />

        <Button text="S'inscrire"
                onAction="#handleRegisterButton"
                styleClass="button" />

        <!-- Lien vers la page d'info -->
        <Hyperlink text="À propos de l'application"
                   onAction="#handleInfoLink"
                   styleClass="hyperlink"/>
    </VBox>
</StackPane>
